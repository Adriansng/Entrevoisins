<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_neighbour"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingTollBar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginEnd="16dp"
            app:expandedTitleMarginStart="16dp"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <ImageView
                android:id="@+id/detail_avatar_neighbour"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/description" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />



        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DBD6D6"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="@dimen/cardview_default_elevation"
                tools:ignore="PrivateResource">

                <TextView
                    android:id="@+id/name_description.txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_name"
                    android:paddingTop="20dp"
                    android:paddingStart="20dp"
                    android:textSize="@dimen/text_size_title_detail"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_adress"
                    android:paddingTop="60dp"
                    android:paddingStart="20dp"
                    android:textSize="@dimen/text_size_detail"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_phone"
                    android:paddingTop="110dp"
                    android:paddingStart="20dp"
                    android:textSize="@dimen/text_size_detail"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/info_facebook"
                    android:paddingTop="160dp"
                    android:paddingStart="20dp"
                    android:textSize="@dimen/text_size_detail"
                    android:paddingBottom="15dp"
                    tools:ignore="RtlSymmetry" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="@dimen/cardview_default_elevation"
                tools:ignore="PrivateResource">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:text="@string/title_description_detail"
                    android:textSize="@dimen/text_size_title_detail"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_detail_text"
                    android:paddingTop="60dp"
                    android:paddingStart="20dp"
                    android:paddingBottom="10dp"
                    tools:ignore="RtlSymmetry" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/favory_button"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center|end"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="130dp"
        app:layout_anchor="@id/appbar2"
        app:layout_anchorGravity="bottom|end"
        android:background="@drawable/round_button"
        app:srcCompat="@drawable/no_yellow_star"
        android:contentDescription="@string/description" />



</android.support.design.widget.CoordinatorLayout>